# window
gtk-titlebar = false
mouse-hide-while-typing = true
macos-titlebar-style = hidden
window-decoration = true

window-padding-balance = true
window-padding-x = 10,0
window-padding-y = 0,0
macos-window-shadow = false
macos-option-as-alt = right

# ghosty specific keybinds only
keybind = super+i=inspector:toggle
keybind = ctrl+i=inspector:toggle
keybind = super+r=reload_config
keybind = ctrl+r=reload_config
keybind = super+k=clear_screen
keybind = ctrl+k=clear_screen
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# clipboard
clipboard-read = "allow"
clipboard-trim-trailing-spaces = true
clipboard-write = "allow"

# misc
confirm-close-surface = false
auto-update = off
quit-after-last-window-closed = true

keybind = shift+enter=text:\n

# Zellij tab switching - Cmd+number
# Unfortunately Ghostty's built-in goto_tab cannot be overridden to send text sequences
# Keeping Ctrl+Space+number as the working method
keybind = super+one=unbind
keybind = super+two=unbind
keybind = super+three=unbind

# Zellij prev/next tab (Cmd+[ / Cmd+]) - sends Alt+p / Alt+n
keybind = super+left_bracket=text:\x1bp
keybind = super+right_bracket=text:\x1bn

# Zellij split pane (Cmd+d) - sends Alt+d
keybind = super+d=text:\x1bd

# background - https://wallhaven.cc/
